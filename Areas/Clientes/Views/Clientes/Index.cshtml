@model DataPaginador<InputModelRegistrar>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container2">
    <div class="row">
        <h5>Clientes</h5>
        <div id="test1" class="col s12">
            <div class="row">
                <div class="input-field col s12">

                    <form asp-area="Clientes" asp-controller="Clientes" asp-action="Index" method="get">
                        <div class="row">
                            <div class="input-field col s6">
                                <input asp-for="Search" placeholder="Buscar cliente">
                            </div>
                            <div class="input-field col s6">
                                <button type="submit" class="waves-effect waves-light btn-small">Buscar</button>
                            </div>
                        </div>
                    </form>
                </div>
                <a asp-page="/Account/Registrar" class="waves-effect waves-light btn-small ">Registrar</a>
                |
                <a asp-area="Clientes" asp-controller="Historiales" asp-action="Index" class="waves-effect waves-light btn-small amber darken-3">Historial</a>
                |
                <a asp-area="Clientes" asp-controller="Clientes" asp-action="Export" class="waves-effect waves-light btn-small grey darken-3">Export</a>
            </div>
            <ul class="collapsible">
                <li>
                    <div class="collapsible-header">
                        <img class='responsive' src='~/images/iconos/Clientes2.png' />Clientes
                    </div>
                    <div class="collapsible-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Foto
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Input.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Input.Apellido)
                                    </th>
                                    <th>
                                        Opciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.List)
                                {
                                    var imagen = item.Email + ".png";
                                    <tr>
                                        <td>
                                            <ul class='collection'>
                                                <li class='collection-item avatar'>
                                                    <img class='responsive circle' src="~/images/fotos/Clientes/@imagen" />
                                                </li>
                                            </ul>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apellido)
                                        </td>
                                        <td>
                                            <a asp-area="Clientes" asp-page="/Account/Reportes" asp-route-id="@item.Email" class="waves-effect waves-light btn-small cyan darken-3">Report</a> |
                                            <a asp-area="Clientes" asp-page="/Account/Registrar" asp-route-id="@item.Email" class="waves-effect waves-light btn-small grey darken-3">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div>
                            Resultados @Html.Raw(Model.Pagi_info);
                            <br />
                            @Html.Raw(Model.Pagi_navegacion)
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
